#root .header {
  width: 95%;
  margin: 0 auto;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#root .header .header-item image {
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 50%;
  vertical-align: middle;
}
#root .header .header-item text {
  vertical-align: middle;
  margin-left: 0.5rem;
}
#root .header .header-item:nth-of-type(2) {
  padding: 0.2rem 0.5rem 0.2rem 0.5rem;
  border-radius: 1rem;
  border: 1px solid #e0e0e0;
}
#root .search {
  width: 90%;
  margin: 0 auto;
  margin-top: 0.5rem;
  font-size: 13px;
  display: flex;
  align-items: center;
  background: #EEEEEE;
  border-radius: 1rem;
  padding: 0.5rem 1rem 0.5rem 1rem;
}
#root .song-list {
  width: 95%;
  margin: 0 auto;
  margin-top: 0.5rem;
}
#root .song-list .song-list-item {
  display: flex;
  margin-top: 0.5rem;
  height: 100px;
}
#root .song-list .song-list-item .img {
  position: relative;
  width: 100px;
  height: 100px;
}
#root .song-list .song-list-item .img ._span {
  position: absolute;
  width: 100%;
  left: 5%;
  color: white;
  font-size: 12px;
  bottom: 0;
}
#root .song-list .song-list-item .img image {
  width: 100px;
  height: 100px;
  border-radius: 10px;
}
#root .song-list .song-list-item .song-list-l {
  font-size: 12px;
  display: flex;
  margin-left: 1rem;
  align-items: center;
}
#root .song-list .song-list-item .song-list-l .song-list-l-item .son {
  width: 230px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 0.8rem;
}

